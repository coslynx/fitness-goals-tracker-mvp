{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "next",
      "react",
      "zustand",
      "react-icons",
      "react-query"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "@supabase/supabase-js"
    ],
    "plugins": [
      {
        "name": "next-transpile-modules",
        "transpileModules": [
          "supabase",
          "@supabase/supabase-js"
        ]
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next.config.js",
    "tsconfig.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}